<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <ImageView
            app:srcCompat="@color/colorAccent"
            android:id="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent" android:layout_height="220dp"
            android:layout_width="400dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textViewR"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/textViewR" android:textSize="24sp"
            app:layout_editor_absoluteX="5dp"
            app:layout_editor_absoluteY="5dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/imageView" android:layout_marginTop="5dp"
            app:layout_constraintBottom_toTopOf="@+id/textViewR2"/>
    <com.google.android.gms.maps.MapView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/mapView"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewR2"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/textViewR2" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewR" app:layout_constraintBottom_toTopOf="@+id/mapView"/>
</android.support.constraint.ConstraintLayout>