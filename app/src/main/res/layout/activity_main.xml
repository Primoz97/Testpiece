<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.MainActivity"
        android:padding="0dp">

    <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent" android:layout_height="match_parent"
            android:layout_alignParentStart="true" android:layout_marginStart="5dp"
            android:layout_alignParentEnd="true" android:layout_marginEnd="5dp"
            android:layout_marginTop="1dp"
            android:adjustViewBounds="false" android:cropToPadding="false"
            app:srcCompat="@android:color/holo_green_dark"
            tools:srcCompat="@tools:sample/backgrounds/scenic[1]" android:background="@color/colorPrimary"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="@string/et_enter_msg"
            android:ems="10"
            android:layout_alignParentEnd="true" android:layout_marginEnd="0dp"
            android:id="@+id/etUserMessage" android:layout_marginTop="2dp" android:layout_alignParentTop="true"/>
    <Button
            android:text="@string/btn_move_to_next_activity"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/btnSendMsgToNextActivity" android:layout_centerInParent="true"/>
    <Button
            android:text="@string/btn_share_to_apps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true" android:id="@+id/btnShareToOtherApps"
            android:layout_marginBottom="158dp"/>
    <Button
            android:id="@+id/btnRestaurants"
            android:text="@string/btn_restaurants"
            android:layout_width="180dp" android:layout_height="70dp"
            android:layout_alignParentTop="true" android:layout_marginTop="50dp"
            android:layout_alignParentStart="true" android:layout_marginStart="10dp"/>
    <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="360px" android:layout_height="180px"
            android:layout_alignParentTop="true" android:layout_marginTop="50dp"
            android:layout_alignParentEnd="true" android:layout_marginEnd="10dp"
            app:srcCompat="@drawable/logo_restaurants" tools:srcCompat="@drawable/logo_restaurants"
            android:scaleType="fitXY" android:background="@color/cardview_light_background"
            android:adjustViewBounds="false" android:cropToPadding="false"/>

</RelativeLayout>