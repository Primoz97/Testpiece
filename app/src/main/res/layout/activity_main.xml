<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.MainActivity"
        app:layout_constraintHeight_min="1000dp"
        android:addStatesFromChildren="true" android:background="@drawable/background_ljubljana"
>


    <Button
            android:text="@string/btn_share_to_apps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" android:id="@+id/btnShareToOtherApps"
            android:layout_marginBottom="68dp" android:layout_alignParentStart="true" android:layout_marginStart="0dp"
            android:visibility="gone"/>

    <Button
            android:text="@string/btnDescription"
            android:layout_width="205dp"
            android:layout_height="65dp" android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" android:id="@+id/btnDescription"
            style="@style/Widget.AppCompat.Button.Colored"
            android:typeface="normal" android:textSize="18sp" android:textAlignment="center"
            android:background="@android:color/holo_blue_dark" android:textStyle="italic"
            android:layout_marginTop="0dp" android:layout_marginStart="0dp" android:alpha="0.70"/>
    <Button
            android:text="@string/btn_maps"
            android:layout_width="205dp"
            android:layout_height="65dp" android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true" android:id="@+id/btnMaps"
            style="@style/Widget.AppCompat.Button.Colored" android:typeface="normal" android:textSize="18sp"
            android:textStyle="italic" android:background="@android:color/holo_blue_dark" android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp" android:alpha="0.70"/>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="1000dp">
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical" android:layout_marginStart="10dp" android:layout_marginTop="75dp"
                      android:layout_marginEnd="10dp" android:layout_height="1000dp">
            <ImageButton
                    android:id="@+id/btnRestaurants"
                    android:text="@string/btn_restaurants"
                    android:layout_width="match_parent" android:layout_height="200dp"
                    app:srcCompat="@drawable/logo_restaurants" tools:srcCompat="@drawable/logo_restaurants"
                    android:scaleType="fitXY" android:background="@color/cardview_light_background"
                    android:adjustViewBounds="false" android:cropToPadding="false" android:alpha="0.60"
            />
            <ImageButton
                    android:id="@+id/btnBars"
                    android:layout_width="match_parent" android:layout_height="200dp"
                    app:srcCompat="@drawable/logo_bar"
                    android:scaleType="fitXY" android:background="@color/cardview_light_background" android:alpha="0.60"
                    android:layout_marginTop="10dp"/>
            <ImageButton
                    android:id="@+id/btnPrintandCopy"
                    android:layout_width="match_parent" android:layout_height="200dp"
                    app:srcCompat="@drawable/logo_copy_shops"
                    android:scaleType="fitXY" android:background="@color/cardview_light_background"
                    android:alpha="0.60" android:layout_marginTop="10dp"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>