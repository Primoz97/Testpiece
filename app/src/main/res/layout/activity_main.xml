<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.MainActivity"
        android:padding="0dp">

    <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent" android:layout_height="match_parent"
            android:layout_alignParentStart="true" android:layout_marginStart="5dp"
            android:layout_alignParentEnd="true" android:layout_marginEnd="5dp"
            android:layout_marginTop="1dp"
            android:adjustViewBounds="false" android:cropToPadding="false"
            android:background="@color/colorPrimary"/>
    <EditText
            android:id="@+id/etUserMessage"
            android:hint="@string/et_enter_msg"
            android:layout_width="250dp" android:layout_height="50dp"
            android:layout_alignParentTop="true" android:layout_marginTop="5dp"
            android:layout_alignParentStart="true" android:layout_marginStart="10dp"
            android:ems="10" android:inputType="textPersonName"/>


    <Button
            android:id="@+id/btnSendMsgToNextActivity"
            android:text="@string/btn_move_to_next_activity"
            android:layout_width="110dp" android:layout_height="50dp"
            android:layout_alignParentTop="true" android:layout_marginTop="5dp"
            android:layout_alignParentEnd="true" android:layout_marginEnd="10dp"/>
    <Button
            android:text="@string/btn_share_to_apps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" android:id="@+id/btnShareToOtherApps"
            android:layout_marginBottom="90dp" android:layout_alignParentStart="true"/>

    <ImageButton
            android:id="@+id/btnRestaurants"
            android:layout_width="180dp" android:layout_height="90dp"
            android:layout_alignParentTop="true" android:layout_marginTop="60dp"
            android:layout_alignParentStart="true" android:layout_marginStart="10dp"
            app:srcCompat="@drawable/logo_restaurants" tools:srcCompat="@drawable/logo_restaurants"
            android:scaleType="fitXY" android:background="@color/cardview_light_background"
            android:adjustViewBounds="false" android:cropToPadding="false"/>
    <ImageButton
            android:id="@+id/btnBars"
            android:layout_width="180dp" android:layout_height="90dp"
            android:layout_alignParentTop="true" android:layout_marginTop="60dp"
            android:layout_alignParentEnd="true" android:layout_marginEnd="10dp"
            app:srcCompat="@drawable/logo_bar"
            android:scaleType="fitXY" android:background="@color/cardview_light_background"/>
    <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="180dp" android:layout_height="90dp"
            android:layout_alignParentStart="true" android:layout_marginStart="10dp"
            android:layout_alignParentTop="true"  android:layout_marginTop="160dp"
            app:srcCompat="@drawable/logo_copy_shops"
            android:scaleType="fitXY" android:background="@color/cardview_light_background"/>

</RelativeLayout>